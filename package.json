{
  "name": "Motherflipper",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --open",
    "build": "vue-cli-service build",
    "build:wc": "vue-cli-service build --target wc --name 'mother-flipper' ./src/plugins/Motherflipper/main.wc.js",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "lint": "vue-cli-service lint --fix",
    "prettier": "prettier --single-quote --list-different './src/**/*.*'",
    "test": "nyc jest --watch && codecov -t ''",
    "test:unit": "vue-cli-service test:unit",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov -t '9a326458-3bbf-42c6-aec7-08b973f235dd'"
  },
  "dependencies": {
    "vue": "^2.5.13",
    "vue-progressbar": "^0.7.5",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-beta.6",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.6",
    "@vue/cli-plugin-unit-jest": "^3.0.0-beta.10",
    "@vue/cli-service": "^3.0.0-beta.6",
    "@vue/test-utils": "^1.0.0-beta.10",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-istanbul": "^4.1.6",
    "codecov": "^3.0.2",
    "eslint-plugin-html": "^4.0.3",
    "jest": "^22.4.3",
    "node-sass": "^7.0.0",
    "nyc": "^11.8.0",
    "sass-loader": "^7.0.1",
    "vue-template-compiler": "^2.5.13"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "prettier": {
    "useTabs": false,
    "singleQuote": true,
    "tabWidth": 2,
    "printWidth": 120,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ]
  },
  "jest": {
    "verbose": false,
    "collectCoverage": true,
    "coverageDirectory": "./coverage/"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
